<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    tools:context="whsct.test.MainMenu"
    android:weightSum="1">

    <!-- Settings -->
    <!-- Setting Cog -->

    <!-- Text -->
    <!-- Main Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="203dp"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:text="..."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#5989e5"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/callButton"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.454" />

    <!-- Smaller text top -->

    <!-- Smaller text lower -->

    <!-- Buttons -->
    <!-- Call Button -->
    <Button
        android:id="@+id/callButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="-3dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="55dp"
        android:backgroundTint="#57cf5b"
        android:onClick="callButton"
        android:text="Call"
        android:textColor="#ffffff"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/notesbutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <!-- Emergency Button -->
    <Button
        android:id="@+id/emergencybutton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#ec2c33"
        android:onClick="emergencyButton"
        android:text="Emergency"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/notesbutton"
        app:layout_constraintRight_toRightOf="@+id/notesbutton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <!-- Notes Button -->
    <Button
        android:id="@+id/notesbutton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#59b2e5"
        android:onClick="notesButton"
        android:text="Note"
        android:textColor="#ffffff"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/emergencybutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="800dp"
        android:layout_height="0dp"
        android:background="#5989e5"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="Diabuddy"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cogwhite"
        android:onClick="settingButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cog" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="188dp"
        android:layout_height="224dp"
        app:srcCompat="@drawable/droplet"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />


</android.support.constraint.ConstraintLayout>