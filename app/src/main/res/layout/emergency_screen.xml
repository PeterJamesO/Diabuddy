<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whsct.test.emergencyScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="800dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:background="#5989e5"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="Emergency"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/emergencyButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="24dp"
        android:background="#ec2c33"
        android:onClick="emergencyButton"
        android:text="Emergency"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="182dp"
        android:layout_height="26dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:text="Sick Day Rules"
        android:textColor="#5989e5"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="180dp"
        android:layout_height="23dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:text="Remember"
        android:textColor="#5989e5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:text="The most important thing to remember when you are ill is to keep giving yourself your insulin."
        android:textAlignment="viewStart"
        android:textColor="#5989e5"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="243dp"
        android:layout_height="23dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:text="What to Look Out For"
        android:textColor="#5989e5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="Just because you have diabetes, it doesn't mean that you're going to get sick more often. But if you do get sick, it might upset your blood glucose levels."
        android:textAlignment="viewStart"
        android:textColor="#5989e5"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:text="Keep taking your insulin - In fact, you might even need a bit more. \nKeep testing - You'll need to test your blood glucose levels more often than usual. \nCheck for ketones - You check for ketones by testing your wee or blood with a special test strip.  \nKeep eating - If you don't feel like eating, have something like soup or a little bit of ice-cream. Phone your doctor or nurse if you can't eat or drink anything and your blood glucose (sugar) is high."
        android:textColor="#5989e5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageButton
        android:id="@+id/imageButton6"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:elevation="0dp"
        android:onClick="returnButton"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:srcCompat="@drawable/arrowwhite"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All information above taken from Diabetes UK"
        android:textColor="#5989e5"
        android:textSize="10sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

</android.support.constraint.ConstraintLayout>
